{
  "name": "webpack-page-cli",
  "version": "1.0.1",
  "description": "基于 webpack 的多页面脚手架",
  "bin": {
    "webpack-page": "bin/index.js"
  },
  "scripts": {
    "create:test": "WEBPACK_PAGE_CLI_TEST=true node --inspect-brk=5858 ./bin/index.js create demo -f",
    "lint:js": "eslint . --fix",
    "debug": "DEBUG=webpack-page-cli:answers webpack-page create demo -f",
    "debug:test": "WEBPACK_PAGE_CLI_TEST=true DEBUG=webpack-page-cli:answers webpack-page create demo -f",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KuangPF/webpack-page-cli"
  },
  "keywords": [
    "webpack",
    "webpack-page-cli",
    "webpack-cli"
  ],
  "author": "kuangpengfei",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "debug": "^4.1.1",
    "ejs": "^2.6.1",
    "ejs-lint": "^0.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "fs-extra": "^8.0.1",
    "globby": "^9.2.0",
    "husky": "^2.3.0",
    "i": "^0.3.6",
    "inquirer": "^6.3.1",
    "isbinaryfile": "^4.0.0",
    "lint-staged": "^8.1.7",
    "npm": "^6.9.0",
    "readline": "^1.3.0",
    "request-promise-native": "^1.0.7",
    "semver": "^6.0.0",
    "string.prototype.padstart": "^3.0.0",
    "yaml-front-matter": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "node_modules/*"
    ],
    "linters": {
      "*.js": [
        "npm run lint:js",
        "git add"
      ]
    }
  },
  "engines": {
    "node": ">=8.9"
  }
}
